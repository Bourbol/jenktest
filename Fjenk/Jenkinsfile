properties ([disableConcurrentBuilds()])

pipeline {
    agent any
    options {
        timestamps()
    }
    triggers { pollSCM("* * * * *") }
    stages {
        stage("Just command") {
            steps {
                sh "mkdir /home/rinmamarun/grofalti"
            }
        }
        stage("Docker build") {
            steps {
                echo "======= Build docker image ======="
                dir("Docker/") {
                sh "docker build ."
                }
            }
        }
    }
}
